<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pairLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textViewPairStart"
            android:layout_toLeftOf="@+id/textViewTypePair"
            android:layout_toRightOf="@+id/textViewPairStart"
            android:layout_toStartOf="@+id/textViewTypePair"
            android:text="SubjectSubjectSubject"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/textNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewSubject"
            android:drawableLeft="@drawable/ic_info_outline_white_18dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_info_outline_white_18dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Note"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/textViewClassroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewSubject"
            android:layout_alignStart="@+id/textViewSubject"
            android:layout_below="@+id/textViewSubject"
            android:drawableLeft="@drawable/ic_room_white_18dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_room_white_18dp"
            android:text="Classroom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/tertiary_text_light" />

        <TextView
            android:id="@+id/textViewPairStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="PairStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/secondary_text_light" />

        <TextView
            android:id="@+id/textViewPairNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewPairStart"
            android:layout_toLeftOf="@id/textViewClassroom"
            android:layout_toStartOf="@id/textViewClassroom"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/tertiary_text_light" />

        <TextView
            android:id="@+id/textViewPairEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textViewPairNumber"
            android:gravity="bottom"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="PairEnd"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light" />

        <TextView
            android:id="@+id/textViewTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewClassroom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textViewClassroom"
            android:layout_below="@+id/textViewClassroom"
            android:drawablePadding="6dp"
            android:text="Teacher"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light" />

        <TextView
            android:id="@+id/textViewTypePair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:text="TypePair"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="14sp" />
    </RelativeLayout>
</FrameLayout>