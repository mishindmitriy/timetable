<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"

    android:id="@+id/pairLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Classroom"
        android:id="@+id/textViewClassroom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewPairNumber"
        android:layout_toEndOf="@+id/textViewPairNumber" />
    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewSubject"
        android:layout_below="@+id/textViewClassroom"
        android:layout_alignLeft="@+id/textViewClassroom"
        android:layout_alignStart="@+id/textViewClassroom" />
    <TextView
        android:id="@+id/textViewPairNumber"
        android:text="PairNumber"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp" />
    <TextView
        android:id="@+id/textViewPrepod"
        android:text="Prepod"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSubject"
        android:layout_alignLeft="@+id/textViewSubject"
        android:layout_alignStart="@+id/textViewSubject" />
    <TextView
        android:id="@+id/textViewTypePair"
        android:text="TypePair"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>